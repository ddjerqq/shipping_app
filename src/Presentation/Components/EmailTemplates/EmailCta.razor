@inherits ComponentBase

<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tbody>
    <tr>
        <td align="center">
            <table border="0" cellspacing="0" cellpadding="0">
                <tbody>
                <tr>
                    <td>
                        <a href="@Href" @attributes="@AdditionalAttributes"
                           style="margin: 26px 0; background-color: rgb(0, 0, 0); cursor: pointer; border-radius: 5px; color: rgb(255, 255, 255); display: inline-block;font-size: 12px; font-weight: 500; line-height: 50px; text-align: center; text-decoration: none; width: 200px;">
                            @Title
                        </a>
                    </td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
    </tbody>
</table>

@code {
    [Parameter, EditorRequired]
    public string Href { get; set; } = null!;

    [Parameter, EditorRequired]
    public string Title { get; set; } = null!;

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object> AdditionalAttributes { get; set; } = [];
}
