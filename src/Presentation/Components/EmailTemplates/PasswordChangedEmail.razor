@layout EmailLayout
@using Domain.Aggregates
@using Microsoft.AspNetCore.Components.Sections
@inherits ComponentBase

<SectionContent SectionId="EmailLayout.TitleSectionId">
    Your password has been successfully <strong style="color:#040;font-weight:bold;">changed!</strong>
</SectionContent>

<SectionContent SectionId="@EmailLayout.FooterSectionId">
    If you did not request a password reset, please contact our support immediately.
    This email was sent to @User.Email.
    support email: <a href="mailto:support@sangoway.com">contact us</a>
</SectionContent>

@code {
    [Parameter]
    public User User { get; set; } = null!;

    [Parameter]
    public string CallbackUrl { get; set; } = null!;
}
