@using Microsoft.AspNetCore.Components.Sections
@inherits LayoutComponentBase

<table width="100%" border="0" cellspacing="0" cellpadding="0" style="font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif; width:100% !important;">
    <tr>
        <td align="center">
            <table style="border-radius:5px;margin:40px 0;" width="600" border="0" cellspacing="0" cellpadding="40">
                <tr>
                    <td align="center" style="border:1px solid #eaeaea;border-radius:5px;background: white;">
                        <div style="text-align:left;width:465px;">
                            <table width="100%" border="0" cellspacing="0" cellpadding="0" style="width:100% !important;">
                                <tr>
                                    <td align="center">
                                        <h1 style="color:#000;font-size:24px;font-weight:normal;margin:30px 0;padding:0;">
                                            <SectionOutlet SectionId="TitleSectionId" />
                                        </h1>
                                    </td>
                                </tr>
                            </table>

                            @Body

                            <p style="color:#666666;font-size:12px;line-height:24px;">
                                <SectionOutlet SectionId="FooterSectionId"/>
                            </p>
                        </div>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>

@code {
    public const string TitleSectionId = "title";
    public const string FooterSectionId = "footer";
}
