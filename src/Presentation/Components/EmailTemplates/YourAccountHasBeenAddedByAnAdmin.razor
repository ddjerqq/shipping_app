@layout EmailLayout
@using Domain.Aggregates
@using Domain.Common
@using Microsoft.AspNetCore.Components.Sections
@inherits ComponentBase

<SectionContent SectionId="EmailLayout.TitleSectionId">
    Welcome to <strong style="color:#040;font-weight:bold;">Sangoway</strong>
</SectionContent>

<EmailParagraph>
    Your account has been created by an administrator
</EmailParagraph>

<EmailParagraph>
    We are excited to have you on board.<br/>
    Please use this email and your following password to login: <br/>
    Email: @User.Email
    Password: @Password
</EmailParagraph>

<EmailCta Href="@($"https://{WebAppDomain}/home")" Title="Go to the website"/>

<hr style="border:none;border-top:1px solid #eaeaea;margin:26px 0;width:100%;"/>
<EmailParagraph>
    Please note it is highly advised to change your password and store it in a secure place.<br/>
    You can review<br/>
    <a href="@($"https://{WebAppDomain}/terms")" target="_blank" style="color:#067df7;text-decoration:none;">
        Terms of Service
    </a> and
    <a href="@($"https://{WebAppDomain}/privacy")" target="_blank" style="color:#067df7;text-decoration:none;">
        Privacy Policy
    </a>:
</EmailParagraph>
<hr style="border:none;border-top:1px solid #eaeaea;margin:26px 0;width:100%;"/>

@code {
    private static string WebAppDomain => "WEB_APP__DOMAIN".FromEnvRequired();

    [Parameter, EditorRequired]
    public User User { get; set; } = null!;

    [Parameter, EditorRequired]
    public string Password { get; set; } = null!;
}
