@inherits UiComponentBase

@if (CurrentValue == Value)
{
    <div @attributes="@AdditionalAttributes"
         class="@(Merge("ring-offset-background focus-visible:ring-ring mt-2 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2"))">
        @ChildContent
    </div>
}

@code {
    [CascadingParameter(Name = nameof(Tabs.Value))]
    public string CurrentValue { get; set; } = null!;

    [Parameter, EditorRequired]
    public string Value { get; set; } = null!;
}