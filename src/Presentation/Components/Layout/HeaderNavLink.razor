<NavLink href="@Href" Match="NavLinkMatch.Prefix" ActiveClass="active"
         class="text-nowrap hover:text-foreground text-foreground/80 font-semibold [&.active]:text-primary transition-colors">
    @Title
</NavLink>

@code {
    [Parameter, EditorRequired]
    public string Href { get; set; } = null!;

    [Parameter, EditorRequired]
    public string Title { get; set; } = null!;
}