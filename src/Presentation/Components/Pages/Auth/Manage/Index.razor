@page "/auth/manage"
@using Microsoft.AspNetCore.Components.Sections

<PageTitle>Manage account</PageTitle>
<SectionContent SectionId="HomeLayout.TitleSectionId">Manage account</SectionContent>

<Tabs Value="ManageSection.PersonalInfo" class="space-y-4">
    <List>
        <Trigger Value="ManageSection.PersonalInfo">Personal Info</Trigger>
        <Trigger Value="ManageSection.ChangePassword">Change Password</Trigger>
        <Trigger Value="ManageSection.MyAddress">My Address</Trigger>
        <Trigger Value="ManageSection.Notifications">Notifications</Trigger>
        <Trigger Value="ManageSection.AccountDeletion" class="text-destructive data-[state=active]:text-destructive">Delete account
        </Trigger>
    </List>
    <TabContent Value="ManageSection.PersonalInfo" class="space-y-4">
        <ManageTabWrapper Title="Manage your personal info">
            <ManageAccount/>
        </ManageTabWrapper>
    </TabContent>
    <TabContent Value="ManageSection.ChangePassword" class="space-y-4">
        <ManageTabWrapper Title="Change your password">
            <ChangePassword/>
        </ManageTabWrapper>
    </TabContent>
    <TabContent Value="ManageSection.MyAddress" class="space-y-4">
        <ManageTabWrapper Title="Manage your addresses">
            <MyAddresses/>
        </ManageTabWrapper>
    </TabContent>
    <TabContent Value="ManageSection.Notifications" class="space-y-4">
        <ManageTabWrapper Title="Manage notifications">
            <ManageNotifications/>
        </ManageTabWrapper>
    </TabContent>
    <TabContent Value="ManageSection.AccountDeletion" class="space-y-4">
        <ManageTabWrapper Title="Delete account">
            <DeleteAccount/>
        </ManageTabWrapper>
    </TabContent>
</Tabs>

@code {
    public enum ManageSection
    {
        PersonalInfo,
        ChangePassword,
        MyAddress,
        Notifications,
        AccountDeletion,
    }
}
