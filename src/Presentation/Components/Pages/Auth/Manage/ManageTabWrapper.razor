@inherits UiComponentBase

<div class="grid" @attributes="@AdditionalAttributes">
    <Card>
        <Header>
            <CardTitle>@Title</CardTitle>
        </Header>
        <Content>
            @ChildContent
        </Content>
    </Card>
</div>

@code {
    [Parameter, EditorRequired]
    public string Title { get; set; } = null!;
}
