@page "/addresses"
@layout HomeLayout
@using Domain.Aggregates
@using Domain.ValueObjects
@using Microsoft.AspNetCore.Components.Sections
@using Presentation.Components.Layout

<PageTitle>Addresses</PageTitle>
<SectionContent SectionId="HomeLayout.TitleSectionId">My addresses</SectionContent>

<Tabs Value="usa" class="space-y-4">
    <List>
        <Trigger Value="usa">United states</Trigger>
        <Trigger Value="uk">United Kingdom</Trigger>
    </List>
    <TabContent Value="usa" class="space-y-4">
        <AddressDisplay
            Rate="@(new Money((Currency)"USD", Package.PricePerKg))"
            Address1="21-A Brookside Dr."
            City="Wilmington"
            State="DE"
            ZipCode="19804"
            Country="United States"
            Phone="+1 302 691 0017"/>
    </TabContent>
    <TabContent Value="uk" class="space-y-4">
        <AddressDisplay
            Rate="@(new Money((Currency)"USD", 9))"
            Address1="13 Oglethorpe Road"
            City="Dagenham"
            State="Essex"
            ZipCode="RM10 7SA"
            Country="United Kingdom"
            Phone="+44 7450 949016"/>
    </TabContent>
</Tabs>