@page "/addresses"
@layout HomeLayout
@using Domain.Aggregates
@using Domain.ValueObjects
@using Microsoft.AspNetCore.Components.Sections

<PageTitle>Addresses</PageTitle>
<SectionContent SectionId="HomeLayout.TitleSectionId">My addresses</SectionContent>

<Tabs Value="Country.Usa" class="space-y-4">
    <List>
        <Trigger Value="Country.Usa">United states</Trigger>
        <Trigger Value="Country.Uk" disabled>United Kingdom</Trigger>
    </List>
    <TabContent Value="Country.Usa" class="space-y-4">
        <AddressDisplay
            Rate="@(new Money((Currency)"USD", Package.PricePerKg))"
            Address1="21-A Brookside Dr."
            City="Wilmington"
            State="DE"
            ZipCode="19804"
            Country="United States"
            Phone="+1 302 691 0017"/>
    </TabContent>
    <TabContent Value="Country.Uk" class="space-y-4">
        <AddressDisplay
            Rate="@(new Money((Currency)"USD", 9))"
            Address1="13 Oglethorpe Road"
            City="Dagenham"
            State="Essex"
            ZipCode="RM10 7SA"
            Country="United Kingdom"
            Phone="+44 7450 949016"/>
    </TabContent>
</Tabs>

@code {
    // TODO move eventually?
    public enum Country
    {
        Usa,
        Uk,
    }
}
