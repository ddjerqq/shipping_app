@page "/staff_dashboard"
@using Presentation.Components.Pages.Admin
@layout HomeLayout
@attribute [StreamRendering]
@attribute [Authorize(Roles = "Staff")]

<PageTitle>Staff dashboard</PageTitle>

<AdminStatus />

<ul class="grid gap-4 grid-cols-1 md:grid-cols-2">
    <Button class="h-14" Href="/packages/receive" Variant="outline">
        <Blazicon Svg="@Lucide.PackagePlus"/>
        Receive package
    </Button>

    <Button class="h-14" Href="/races/add_package" Variant="outline">
        <Blazicon Svg="@Lucide.PlaneTakeoff"/>
        Add package to race
    </Button>

    <Button class="h-14" Href="/packages/arrived" Variant="outline">
        <Blazicon Svg="@Lucide.PlaneLanding"/>
        Mark package as arrived
    </Button>

    <Button class="h-14" Href="/packages/deliver" Variant="outline">
        <Blazicon Svg="@Lucide.PackageOpen"/>
        Mark package as delivered to user
    </Button>
</ul>