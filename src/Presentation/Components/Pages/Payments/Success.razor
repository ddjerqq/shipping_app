@page "/payments/success"
@using Stripe.Checkout
@attribute [StreamRendering]

@if (Session is not null)
{
    <div class="w-full flex items-center px-4 py-12">
        <div class="w-full space-y-6 text-center">
            <div class="space-y-3">
                <h1 class="text-4xl font-bold tracking-tighter sm:text-5xl">@Locale.success</h1>
                <p class="text-2xl">
                    @Locale.you_successfully_deposited @((float?)Session.AmountTotal / 100) @Session.Currency @Locale.to_your_account!<br/>
                    @Locale.thank_you_for_using_our_services
                </p>
            </div>

            <Button Href="/" Size="lg">
                @Locale.return_home
            </Button>
        </div>
    </div>
}

@code {
    private readonly SessionService _sessionService = new();

    [SupplyParameterFromQuery(Name = "session_id")]
    public string SessionId { get; set; } = null!;

    private Session? Session { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Session = await _sessionService.GetAsync(SessionId, cancellationToken: CancellationToken);
    }
}