@inject IJSRuntime Js

<div class="lg:[height:calc(100vh_-_56px_-_96px)] flex flex-col lg:flex-row items-center justify-between w-full p-4 lg:p-8 relative pt-24 lg-pt-0">
    <div class="flex flex-col justify-center items-center lg:items-start w-full lg:w-1/2 lg:mb-8 lg:mb-0 text-center lg:text-left">
        <h1 class="text-4xl lg:text-5xl font-bold mb-4">
            <span class="text-[#21bf73]">#1</span>
            @Locale.hero_title
        </h1>

        <p class="mb-8 text-lg max-w-3xl mx-auto">
            @Locale.hero_description
        </p>

        <CtaButton>
            @Locale.hero_cta_text
        </CtaButton>
    </div>

    <div class="relative flex justify-center w-[400px] h-[400px] lg:w-[500px] lg:h-[500px] items-center w-full lg:w-1/2 pointer-events-none">
        <img
            id="initial-globe"
            src="images/initial-globe.webp"
            alt="initial-globe"
            class="absolute w-[257px] h-[257px] lg:w-[320px] lg:h-[320px] rounded-full"
        />
        <canvas
            id="globe"
            class="absolute w-[400px] h-[400px] lg:w-[500px] lg:h-[500px] pointer-events-auto"
        ></canvas>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await Js.InvokeAsync<IJSObjectReference>("import", "./scripts/globe.min.js");
        await Js.InvokeVoidAsync("startGlobe");
    }
}

