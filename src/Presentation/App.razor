@using Presentation.Components.Layout
<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <title>ShippingApp</title>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <base href="/">
    @* TODO add this only after the feature is paid for *@
    @* <link rel="manifest" href="manifest.jsonc"> *@

    <link href="Presentation.styles.css" rel="stylesheet" />
    <link href="favicon.ico" rel="icon" />
    <link href="app.min.css" rel="stylesheet" />
    <script src="scripts/util.js"></script>

    <HeadOutlet @rendermode="RenderModeForPage" />
</head>
<body>

<Routes @rendermode="RenderModeForPage"/>

<div id="blazor-error-ui">
    error detected, please
    <a href="" class="reload">reload</a>
    <a class="dismiss">&times;</a>
</div>

<div id="components-reconnect-modal">
    <div class="flex-col gap-3 max-w-md p-2 rounded-md border border-gray-300 bg-white text-2xl" id="reconnect-show">
        <span>detected a networking error</span>
        <span>this is not a major issue</span>
        <button class="btn btn-icon btn-success p-1 flex-grow" onclick="location.reload()">
            <Blazicon Name="@Lucide.ArrowDown" class="size-6"/>
            reload
        </button>
    </div>

    <div class="flex-col gap-3 max-w-md p-2 rounded-md border border-gray-300 bg-white text-2xl" id="reconnect-hide">
        <span>server connection restore, you may reload the page.</span>
    </div>

    <div class="flex-col gap-3 max-w-md p-2 rounded-md border border-gray-300 bg-white text-2xl" id="reconnect-failed">
        <span>reload the page to recover the connection</span>
        <button class="btn btn-icon btn-success p-1 flex-grow" onclick="window.Blazor.reconnect()">
            <Blazicon Name="@Lucide.ArrowDown" class="size-6"/>
            reload
        </button>
    </div>

    <div class="flex-col gap-3 max-w-md p-2 rounded-md border border-gray-300 bg-white text-2xl" id="reconnect-rejected">
        <span>to reconnect, reload the page</span>
        <button class="btn btn-icon btn-success p-1 flex-grow" onclick="location.reload()">
            <Blazicon Name="@Lucide.ArrowDown" class="size-6"/>
            reload
        </button>
    </div>
</div>

<script src="_framework/blazor.web.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
</body>
</html>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private IComponentRenderMode? RenderModeForPage => HttpContext.Request.Path.StartsWithSegments("/account")
        ? null
        : InteractiveServer;
}
